{
  "name": "@mojaloop/bulk-api-adapter",
  "version": "7.4.0",
  "description": "Mojaloop Bulk API Adapter",
  "license": "Apache-2.0",
  "author": "ModusBox",
  "contributors": [
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mojaloop/bulk-api-adapter.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@hapi/basic": "5.1.1",
    "@hapi/good": "8.2.2",
    "@hapi/hapi": "18.4.0",
    "@hapi/inert": "5.2.2",
    "@hapi/vision": "5.5.4",
    "@mojaloop/central-object-store": "7.1.0",
    "@mojaloop/central-services-error-handling": "7.5.0",
    "@mojaloop/central-services-metrics": "5.2.0",
    "@mojaloop/central-services-shared": "7.5.0",
    "@mojaloop/central-services-stream": "8.1.0",
    "@now-ims/hapi-now-auth": "2.0.0",
    "blipp": "4.0.1",
    "boom": "7.3.0",
    "commander": "3.0.1",
    "hapi": "18.1.0",
    "hapi-openapi": "1.2.2",
    "hapi-auth-bearer-token": "6.2.1",
    "hapi-swagger": "10.1.2",
    "immutable": "4.0.0-rc.12",
    "mustache": "3.1.0",
    "rc": "1.2.8",
    "request": "2.88.0",
    "run-s": "0.0.0",
    "uuid4": "1.1.4"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "istanbul": "1.1.0-alpha.1",
    "nodemon": "1.19.2",
    "npm-check-updates": "3.1.23",
    "npm-run-all": "4.1.5",
    "pre-commit": "1.2.2",
    "standard": "14.3.1",
    "swagmock": "1.0.0",
    "tap-xunit": "2.4.1",
    "tape": "4.11.0",
    "tapes": "4.1.0"
  },
  "pre-commit": [
    "standard",
    "dep:check",
    "test"
  ],
  "scripts": {
    "start": "run-p start:api",
    "start:api": "node src/api/index.js",
    "watch:api": "nodemon src/api/index.js",
    "regenerate": "yo swaggerize:test --framework hapi --apiPath './src/interface/swagger.yaml'",
    "test": "npm run test:unit | faucet",
    "test:all": "run-s test",
    "test:unit": "tape 'test/unit/**/*.test.js'",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "generator-swaggerize": {
    "version": "4.1.0"
  },
  "main": "./src/api/index.js"
}
